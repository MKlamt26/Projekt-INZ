@page "/TreningCart"
@inherits TreningCartBase
@inject ISyncLocalStorageService localStorage



@if (treningCartItemDtos == null && errorMessage == null)
{
    <DisplaySpinner></DisplaySpinner>
}

else if (errorMessage != null)
{
    <DisplayError ErrorMessage ="@errorMessage"></DisplayError>
}

else{
    <AuthorizeView>
        <NotAuthorized>
        <h1> Welcome to TreningCart</h1>

        </NotAuthorized>
    <Authorized>
        <h1> Welcome back, @localStorage.GetItemAsString("username") to DayCart</h1>
    </Authorized>

    </AuthorizeView>
    


     <h3 class="mb-5">Trening Cart</h3>
       <EditForm Model="treningCartDto">
   <div class="form-group">
    <label for="userSex">Trening Cart Date</label>
     <div class="col-sm-10">
    <InputDate @bind-Value="treningCartDto.CreatedDate" Format="yyyy-MM-dd" Min="@minDate" Max="@maxDate" class="form-control" />
    </div>
  </div>
 
 
  
    </EditForm>

        <div class="row">
 <p class="mb-4">
              <div>
                <button class="btn btn-success"
                @onclick ="() => (ShowDayCartClick(treningCartDto.CreatedDate))"
                ><b>Show Trening cart</b></button>
            </div>
            </p>
 </div>
    

   


    
      <div class = "row mb-5">
        <div class ="col-md-9">
           @foreach (var exercise in treningCartItemDtos)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@exercise.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@exercise.CategoryName</h6>
            <p class="card-text">@exercise.Description</p>
            <p>Number of sets: @exercise.Sets</p>
            <p>Number of repetitions: @exercise.Repetitions</p>
            <button class="btn btn-info btn-sm"
                                @onclick="(() => UpdateTreningCart_Click(exercise.Id, exercise.Sets,exercise.Repetitions))"
                            >Update Exercise</button>
        </div>
    </div>
}
             </div>
              

             <div class="col-md-3">
            
            <div class="mt-2">
                
                <a href="AddExercise" class="btn btn-success">
                  Add Exercise
                </a>
            </div>
        </div>
        </div>






}

