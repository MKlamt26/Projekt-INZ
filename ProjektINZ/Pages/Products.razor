@page "/old"
@using ProjektKalorie.Pages
@using ShopOnline.Models.Dtos

@inherits ProductBase

@if(Products==null)
{
    <h3>Loading products</h3>
}
else
{

    <h3 class="mb-5">Products </h3>
    var productCout = Products.Count();

    @if(productCout>0)
    {

       


          

                @foreach(var prodGroup in GetGrupedProductsByCategory())

            {
                  
                <h4>@GetCategoryName(prodGroup)</h4>

                <div class = "row mt-3">
                            
                    <DisplayPruducts Products="@prodGroup"></DisplayPruducts>

                </div>

                <hr class="mb-3"/> //linia pusta
            }

               

            
        
    }
}
